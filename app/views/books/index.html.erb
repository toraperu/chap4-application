<header>
	<h1 class="headline">
		<a href="#">Bookers</a>
	</h1>
</header>

<main class="clearfix">
	<section class="book-list">
		<h2>Books</h2>
			<table>
				<thead>
					<tr>
						<th class="table-title">title</th>
						<th class="table-body">body</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td><%= book.title %></td>
						<td><%= book.body %></td>
						<td><%=link_to 'show', book_path(book.id), class:"show_#{book.id}" %>
							<%=link_to 'edit', edit_book_path(book.id), class:"edit_#{book.id}" %>
							<%=link_to 'destroy', book_path(book.id), method: :'delete' , class:"destroy_#{book.id}" %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
	</section>
	<section class="introduce-new-book">
		<h2>New Book</h2>
		<%= form_for(@book) do |f| %>

			<h4>Title</h4>
			<%= f.text_field :title, class:"book_title" %>

			<h4>Body</h4>
			<%= f.text_area :body, class:"book_body" %>
			<%= f.submit 'create' %>
			<% if flash[:notice] %>
				<div class="flash">
					<%= flash[:notice] %>
				</div>
			<% end %>
		<% end %>
	</section>
</main>